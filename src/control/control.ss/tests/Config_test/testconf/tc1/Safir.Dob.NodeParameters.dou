<class xmlns="urn:safir-dots-unit">
  <summary>Contains paramaters for all nodes in the system.</summary>
  <name>Safir.Dob.NodeParameters</name>
  <baseClass>Safir.Dob.Parametrization</baseClass>
  <parameters>

    <parameter>
      <summary>Defines the different node types in the system.</summary>
      <name>NodeTypes</name>
      <type>Safir.Dob.NodeType</type>
      <arrayElements>

        <arrayElement>
          <Safir.Dob.NodeType type="Safir.Dob.NodeType">
            <Name>Server</Name>
            <IsLight>False</IsLight>
            <TalksTo></TalksTo>
            <MulticastAddress>192.0.0.1</MulticastAddress>
            <ControlPort>9500</ControlPort>
            <DataPort>9501</DataPort>
            <HeartbeatInterval>1000</HeartbeatInterval>
            <MaxLostHeartbeats>5</MaxLostHeartbeats>
            <SlidingWindowsSize>10</SlidingWindowsSize>
            <RetryTimeout>200</RetryTimeout>
            <WantedTypes>
              <String>.*</String> <!-- Must be all types for non IsLight node -->
            </WantedTypes>
            <UnwantedTypes></UnwantedTypes>
          </Safir.Dob.NodeType>
        </arrayElement>

        <arrayElement>
          <Safir.Dob.NodeType type="Safir.Dob.NodeType">
            <Name>Client</Name>
            <IsLight>True</IsLight>
            <TalksTo>
              <String>Server</String>
            </TalksTo>
            <MulticastAddress>192.0.0.15</MulticastAddress>
            <ControlPort>9500</ControlPort>
            <DataPort>9501</DataPort>
            <HeartbeatInterval>5000</HeartbeatInterval>
            <MaxLostHeartbeats>5</MaxLostHeartbeats>
            <SlidingWindowsSize>10</SlidingWindowsSize>
            <RetryTimeout>2000</RetryTimeout>
            <WantedTypes>
              <String>.*</String> <!-- This client  wants all types -->
            </WantedTypes> 
            <UnwantedTypes></UnwantedTypes>
          </Safir.Dob.NodeType>
        </arrayElement>

        <arrayElement>
          <Safir.Dob.NodeType type="Safir.Dob.NodeType">
            <Name>RemoteClient</Name>
            <IsLight>True</IsLight>
            <TalksTo>
              <String>Server</String>
            </TalksTo>
            <MulticastAddress>192.0.0.16</MulticastAddress>
            <ControlPort>9500</ControlPort>
            <DataPort>9501</DataPort>
            <HeartbeatInterval>30000</HeartbeatInterval>
            <MaxLostHeartbeats>5</MaxLostHeartbeats>
            <SlidingWindowsSize>10</SlidingWindowsSize>
            <RetryTimeout>5000</RetryTimeout>
            <WantedTypes>
              <String>Capabilities\.Vehicles\.</String>
            </WantedTypes>
            <UnwantedTypes>
              <String>Capabilities\.Vehicles\.Ambulance.*</String>
            </UnwantedTypes>
          </Safir.Dob.NodeType>
        </arrayElement>

      </arrayElements>
    </parameter>

  </parameters>
</class>
