<?xml version="1.0" encoding="utf-8"?>
<DoseTest.Items.TestCase>
  <Description xml:space="preserve">Testing subscription and unsubscription of local entity using entity id</Description>
  <Expectation xml:space="preserve">Partner 0/Consumer 2 receives one OnNewEntity callback (no OnUpdatedEntity)</Expectation>
  <TestCaseSetupActions>
    <DoseTest.Action index="0">
      <ActionKind>RegisterEntityHandler</ActionKind>
      <Partner>1</Partner>
      <Consumer>0</Consumer>
      <TypeId>DoseTest.LocalEntity</TypeId>
      <Handler>DEFAULT_HANDLER</Handler>
      <InstanceIdPolicy>RequestorDecidesInstanceId</InstanceIdPolicy>
    </DoseTest.Action>
    <DoseTest.Action index="1">
      <ActionKind>SetAll</ActionKind>
      <Partner>1</Partner>
      <Consumer>0</Consumer>
      <Instance>0</Instance>
      <Handler>DEFAULT_HANDLER</Handler>
      <Object type="DoseTest.LocalEntity">
        <Info xml:space="preserve">New information</Info>
      </Object>
    </DoseTest.Action>
  </TestCaseSetupActions>
  <TestActions>
    <DoseTest.Action index="0">
      <ActionKind>SubscribeEntity</ActionKind>
      <Partner>0</Partner>
      <Consumer>2</Consumer>
      <EntityId>
        <name>DoseTest.LocalEntity</name>
        <instanceId>0</instanceId>
      </EntityId>
      <IncludeUpdates>false</IncludeUpdates>
      <IncludeSubclasses>false</IncludeSubclasses>
      <RestartSubscription>false</RestartSubscription>
    </DoseTest.Action>
    <DoseTest.Action index="1">
      <ActionKind>UnsubscribeEntity</ActionKind>
      <Partner>0</Partner>
      <Consumer>2</Consumer>
      <EntityId>
        <name>DoseTest.LocalEntity</name>
        <instanceId>0</instanceId>
      </EntityId>
      <IncludeSubclasses>false</IncludeSubclasses>
    </DoseTest.Action>
    <DoseTest.Action index="2">
      <ActionKind>SetAll</ActionKind>
      <Partner>1</Partner>
      <Consumer>0</Consumer>
      <Instance>0</Instance>
      <Handler>DEFAULT_HANDLER</Handler>
      <Object type="DoseTest.LocalEntity">
        <Info xml:space="preserve">Updated information</Info>
      </Object>
    </DoseTest.Action>
  </TestActions>
</DoseTest.Items.TestCase>
