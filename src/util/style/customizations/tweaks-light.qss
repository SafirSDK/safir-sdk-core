QLabel#ConnectedLabelConnected {
    color: darkgreen;
}

QLabel#ConnectedLabelDisconnected {
    color: darkred;
}

QFrame#StatusBarSeparator {
    background-color:#FAFAFA;
    border: 0px;
    width:1px;
}

/*
Copy to clipboard buttons in OperationsWidget, no frame.
*/
OperationsWidget > QToolButton {
    border: none;
    background: none;
    qproperty-icon: url(:/img/icons/copy-black.svg);
}

OperationsWidget > QToolButton#randomInstanceBtn {
    qproperty-icon: url(:/img/icons/dice-black.svg);
}

OperationsWidget > QToolButton > QToolTip {
    background-color: #9FCBFF;
    color: #19232D;
    border: none;
    padding: 0px;
}

QToolButton#DispatchButton {
    color: #373532;
}

FileInfoWidget > QToolButton#openContainingFolderButton {
    qproperty-icon: url(:/img/icons/folderopen-black.svg);
}