post_install() {
  if [ -z "$(grep ^safirusers: /etc/group)" ]; then
    groupadd --system safirusers &>/dev/null
  fi

  chown root.safirusers var/log/safir_sdk_core
  chown root.safirusers var/lib/safir_sdk_core/dump
  systemd-tmpfiles --create safir-sdk-core.conf
}

pre_remove() {
  if [ ! -z "$(grep ^safirusers: /etc/group)" ]; then
    groupdel safirusers &>/dev/null
  fi
}
