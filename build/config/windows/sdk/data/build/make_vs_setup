#
# Attempt to find the vcvarsall.bat script and set up VC_SETUP and NET_SETUP variables.
# Currently we look for visual studio 8 installation first, and then 9.0
#

VC_DIR = C:/Program\ Files/Microsoft\ Visual\ Studio\ 8/VC
VCVARSALL = $(wildcard $(VC_DIR)/*.bat)

ifeq ($(strip $(VCVARSALL)),) #if we couldnt find vcvarsall.bat in vc80
VC_DIR = C:/Program\ Files/Microsoft\ Visual\ Studio\ 9.0/VC
VCVARSALL = $(wildcard $(VC_DIR)/*.bat)
endif

ifeq ($(strip $(VCVARSALL)),) #if we couldnt find vcvarsall.bat in vc80
ERROR:
	echo "Failed to find vcvarsall.bat in either vc80 or vc90 installation!"
endif

VC_SETUP = "$(VCVARSALL)" x86 >/nul
NET_SETUP = "$(VCVARSALL)" x86 >/nul

